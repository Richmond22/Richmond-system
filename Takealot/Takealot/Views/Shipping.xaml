<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Takealot.Views.Shipping">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Choose how to ship it"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"/>
            <Button Text="Courier" FlowDirection="MatchParent"
                    Clicked="Handle_Clicked_1"/>
            <Button Text="Collect" FlowDirection="MatchParent"
                    Clicked="Handle_Clicked"/>
            <Image Source="http://www.3smedia.co.za/transportworldafrica/wp-content/uploads/sites/2/2016/06/Takealot-fleet-300x156.jpg"
                   HeightRequest="200"
                   HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
