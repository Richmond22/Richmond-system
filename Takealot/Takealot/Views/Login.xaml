<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Takealot.Views.Login"
             Title="Login">
    <ContentPage.Content>
    <StackLayout BackgroundColor="Silver" >

            <Entry x:Name="email"
                  IsPassword="False"
                   TextColor="Black"
                   FontSize="18"
                   Placeholder="email"
                   Margin="12"/>

            <Entry x:Name="Password"
                  IsPassword="True"
                   TextColor="Black"
                   FontSize="18"
                   Placeholder="Password"
                   Margin="12"/>
            <Label Margin="10" x:Name="loggedin" TextColor="Red" FontSize="15"></Label>
            <Button Margin="15" BackgroundColor="Navy" Text="Login" Clicked="Handle_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
